<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_third"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#948588"
    tools:context="com.example.mareklaskowski.workshop2starter.ThirdActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="74dp"
        android:layout_marginTop="44dp"
        android:textColor="#f10631"
        android:typeface="serif"
        android:textStyle="normal|bold"
        android:textSize="15dp"
        android:id="@+id/greeting" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/greeting"
        android:layout_alignStart="@+id/greeting"
        android:layout_marginTop="20dp"
        android:textColor="#021638"
        android:typeface="monospace"
        android:textStyle="normal|italic"
        android:textSize="30dp"
        android:id="@+id/MyName" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/studentMsg"
        android:layout_below="@+id/MyName"
        android:layout_alignStart="@+id/MyName"
        android:textColor="#318b23"
        android:typeface="normal"
        android:textStyle="bold|italic"
        android:textSize="45dp"
        android:layout_marginTop="17dp" />
</RelativeLayout>
